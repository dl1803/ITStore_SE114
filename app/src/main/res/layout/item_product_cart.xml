<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        >
    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        >
        <CheckBox
            android:id="@+id/cbAgreeBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:buttonTint="@color/orange_primary"
            >
        </CheckBox>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_product"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cbAgreeBuy"
            app:cardCornerRadius="18dp"
            android:backgroundTint="@color/gray_background"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ram1"
                android:scaleType="fitCenter"

                >
            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cv_item_product"
            app:layout_constraintRight_toRightOf="parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cv_item_product"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
                android:paddingTop="6dp"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="RAM Desktop Kingston Fury Beast"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:maxLines="3"
                    >
                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:layout_marginRight="4dp"
                    app:cardElevation="0dp"
                    >
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_close"
                        android:padding="2dp"
                        app:tint="#8B8989"
                        android:layout_marginTop="-4dp"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="16GB"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                >
            </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/cv_item_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1.152.000Ä‘"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/red_price"
                        android:maxLines="3"
                        android:layout_gravity="center_vertical"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="@color/white"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_minus"
                            app:tint="#8B8989"
                            >
                        </ImageView>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        >
                    </TextView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/orange_primary"
                            app:strokeWidth="2dp"
                            app:cardCornerRadius="10dp"
                            android:backgroundTint="@color/white"
                            >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/orange_primary"
                            >
                        </ImageView>
                        </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>