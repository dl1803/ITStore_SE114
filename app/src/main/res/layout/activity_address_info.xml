<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBacktoCheckout"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="@color/orange_light"
            app:cardElevation="1dp"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="#808080"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Thêm địa chỉ mới"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin liên hệ"
                android:layout_marginBottom="12dp"
                android:textColor="#666"></TextView>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Họ và tên"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="1dp"></EditText>

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:layout_marginBottom="12dp"
                android:textColor="#666"></TextView>

            <EditText
                android:id="@+id/edtProvince"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Chọn Tỉnh / Thành phố"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="1dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false" ></EditText>

            <EditText
                android:id="@+id/edtDistrict"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Chọn Quận / Huyện"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="1dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false" ></EditText>

            <EditText
                android:id="@+id/edtWard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Chọn Phường / Xã"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="1dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false" ></EditText>

            <EditText
                android:id="@+id/edtStreet"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="top|start"
                android:hint="Tên đường, Tòa nhà, Số nhà"
                android:padding="12dp"
                android:layout_marginBottom="16dp"></EditText>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/btnSaveAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Lưu thông tin"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="@color/orange_primary"
            app:cornerRadius="12dp"
            ></Button>
    </LinearLayout>

</LinearLayout>