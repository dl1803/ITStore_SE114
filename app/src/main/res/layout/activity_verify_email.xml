<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_email"
        app:tint="@color/orange_primary"
        android:layout_marginBottom="24dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác thực Email"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"></TextView>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúng tôi đã gửi một đường dẫn kích hoạt đến email của bạn. Vui lòng kiểm tra hộp thư (kể cả thư rác) để hoàn tất đăng ký."
        android:textSize="15sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="40dp"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ĐÃ XÁC THỰC, TỚI ĐĂNG NHẬP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_box"
        android:backgroundTint="@color/orange_primary"
        android:layout_marginBottom="16dp"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/tvResendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa nhận được? Gửi lại email"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:padding="8dp"></TextView>

</LinearLayout>