<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8F9FA">
    <LinearLayout
        android:id="@+id/layoutNavCheckout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:padding="16dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/orange_primary">
            </ImageView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Thanh toán"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </TextView>
    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/layoutNavCheckout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#E0E0E0"
        ></View>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutNavCheckout"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutCheckout"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardItemProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    >

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:paddingVertical="2dp"
                        app:tint="@color/orange_primary"
                        ></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thông tin sản phẩm"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        ></TextView>
                    </LinearLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_checkout_product"
                        tools:itemCount="2"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/cardItemProduct">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/titleAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:paddingVertical="2dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/orange_primary"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Địa chỉ nhận hàng"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgForwardDiscount"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_forward"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#A0A0A0"
                        ></ImageView>

                    <TextView
                        android:id="@+id/tvUserInfo"
                        android:text="User name | 0987654321"
                        app:layout_constraintTop_toBottomOf="@id/titleAddress"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"></TextView>

                    <TextView
                        android:text="123 Đường Linh Kiện, Phường 10, Quận 1"
                        android:textColor="#666"
                        app:layout_constraintTop_toBottomOf="@id/tvUserInfo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/cardInfo"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/title_payment"
                android:layout_marginTop="24dp"
                android:paddingLeft="16dp"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:padding="2dp"
                    app:tint="@color/orange_primary"
                    ></ImageView>

                <TextView
                    android:text="Phương thức thanh toán"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                </TextView>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rgPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_box"
                android:backgroundTint="@color/white"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/title_payment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <RadioButton
                    android:id="@+id/rbCod"
                    android:text="Thanh toán khi nhận hàng (COD)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RadioButton>

                <RadioButton
                    android:id="@+id/rbMomo"
                    android:text="Ví điện tử Momo"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rbZaloPay"
                    android:text="Ví ZaloPay"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RadioButton>

                <RadioButton
                    android:id="@+id/rbVnpay"
                    android:text="Cổng thanh toán VNPay"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RadioButton>

                <RadioButton
                    android:id="@+id/rbBankTransfer"
                    android:text="Chuyển khoản / Thẻ tín dụng"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RadioButton>
            </RadioGroup>

            <EditText
                android:id="@+id/edtVoucher"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Nhập mã giảm giá"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/rgPayment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnApply"
                app:layout_constraintBottom_toTopOf="@+id/layoutDetailCheckout"
                android:layout_marginRight="8dp"
                android:background="#ECECEC"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnApply"
                android:text="Áp dụng"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/rgPayment"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/layoutDetailCheckout"
                app:layout_constraintLeft_toRightOf="@id/edtVoucher"
                android:textSize="15dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDetailCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="@drawable/rounded_box"
                app:layout_constraintTop_toBottomOf="@id/edtVoucher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <TextView android:id="@+id/tvDetailCheckout"
                    android:text="Chi tiết thanh toán"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></TextView>

                <TextView android:id="@+id/tvTotalFee"
                    android:text="Tổng tiền hàng"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    ></TextView>

                <TextView
                    android:id="@+id/tvSubtotalPrice"
                    android:text="1.152.000đ"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailCheckout"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:id="@+id/tvShipping"
                    android:text="Phí vận chuyển"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTotalFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:id="@+id/tvShippingPrice"
                    android:text="30.000đ"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTotalFee"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <View android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvShipping"></View>
                <TextView android:text="Tổng thanh toán"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"></TextView>
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:text="1.182.000đ"
                    android:textColor="@color/red_price"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:backgroundTint="@color/orange_primary"
            android:text="Đặt hàng"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="14dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/btnCheckout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tổng cộng:"
                    android:textSize="14dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1.182.000đ"
                    android:textColor="@color/red_price"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="end">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tiết kiệm:"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical">
                </TextView>
                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="648.000đ"
                    android:textColor="#FF4040"
                    android:textSize="14dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="end">
                </TextView>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>