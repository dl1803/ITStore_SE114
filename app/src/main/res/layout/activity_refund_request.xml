<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu cầu Trả hàng / Hoàn tiền"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >

        <LinearLayout
            android:id="@+id/layoutContentRefundRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvReasonLabelRefundRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lý do trả hàng (*)"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" ></TextView>

            <EditText
                android:id="@+id/edtReasonRefundRequest"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:gravity="top|start"
                android:hint="Vui lòng nhập chi tiết tình trạng sản phẩm..."
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp" ></EditText>

            <TextView
                android:id="@+id/tvProofLabelRefundRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ảnh minh chứng (nếu có)"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" ></TextView>

            <LinearLayout
                android:id="@+id/layoutUploadImgRefundRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUploadRefundRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange_light"
                    android:textColor="#333333"
                    android:text="Chọn ảnh" ></Button>

                <ImageView
                    android:id="@+id/imgProofRefundRequest"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:background="#E0E0E0"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    ></ImageView>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" ></Space>

            <Button
                android:id="@+id/btnSubmitRefundRequest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/orange_primary"
                android:text="GỬI YÊU CẦU"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" ></Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>